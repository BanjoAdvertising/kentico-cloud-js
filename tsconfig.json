{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "parse5": ["./node_modules/parse5/lib/index.d.ts"]
    },
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "lib/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "node_modules",
    "dev-test"
  ]
}